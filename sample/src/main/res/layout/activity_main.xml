<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/activity_background"
        tools:context=".MainActivity">

    <com.github.islamkhsh.CardSliderViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewPager"
            android:layout_marginTop="24dp"
            app:cardSlider_smallScaleFactor="0.9"
            app:cardSlider_smallAlphaFactor="0.5"
            app:cardSlider_otherPagesWidth="24dp"
            app:cardSlider_pageMargin="12dp"
            app:cardSlider_cardCornerRadius="5dp"
            app:cardSlider_indicator="@id/indicator"
            app:auto_slide_time="3"
    />


    <com.github.islamkhsh.CardSliderIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indicator"
            android:layout_marginTop="12dp"
            app:indicatorsToShow="5"
            android:layout_gravity="center_horizontal"
    />


    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Enable scale"
            android:id="@+id/check_scaling"
            android:layout_marginTop="36dp"
            android:layout_marginStart="48dp" />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Enable changing opacity"
            android:id="@+id/check_alpha_changing"
            android:layout_marginTop="12dp"
            android:layout_marginStart="48dp" />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Enable auto sliding"
            android:id="@+id/check_enable_auto_sliding"
            android:layout_marginTop="12dp"
            android:layout_marginStart="48dp" />


    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Infinite indicator"
            android:id="@+id/check_infinite_indicator"
            android:layout_marginTop="12dp"
            android:layout_marginStart="48dp" />

</LinearLayout>